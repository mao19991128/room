<h1>施設の新規登録</h1>

<%= form_with model: @room do |f| %>

    <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name %>
    </div>

    <div class="field">
        <%= f.label :introduction %><br />
        <%= f.text_area :introduction, :size=>"60x10"  %>
    </div>

    <div class="field">
        <%= f.label :fee %><br />
        <%= f.text_field :fee %>
    </div>

    <div class="field">
        <%= f.label :address %><br />
        <%= f.text_field :address %>
    </div>

    <div class="field">
        <%= f.label :image %><br />
        <%= f.file_field :image %>
    </div>

    <div class="actions">
        <%= f.submit "保存" %>
    </div>
<% end %>

<%= link_to "キャンセル" %>